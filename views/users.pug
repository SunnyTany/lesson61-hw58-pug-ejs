doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")

  body
    .container
      h1  #{ title }

      ul 
        each user in users
          li 
            a(href='/users/:userId') Name:  #{ user.name } | Age: #{ user.age }
      
      a(href="/") Back to main page